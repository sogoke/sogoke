<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
	<div>
	 <ul><%= sogoke_error_message(@category) %></ul>
    </div>
  <% end %>

  <div class="field">
	<%= f.label "父类" %>
	<%= f.collection_select :parent_id, Category.roots, :id, :name, include_blank: true %><br />
	
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
